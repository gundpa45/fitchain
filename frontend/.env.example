# FitChain Environment Variables Example
# Copy this file to .env and fill in your actual values

# Smart Contract Configuration
VITE_PUBLIC_CONTRACT_ADDRESS=0x...Your...Deployed...Contract...Address...

# Blockchain RPC Configuration (Get from Infura, Alchemy, or QuickNode)
VITE_PUBLIC_INFURA_API_KEY=your-infura-or-alchemy-api-key

# Network Configuration
VITE_PUBLIC_NETWORK_ID=1
VITE_PUBLIC_NETWORK_NAME=mainnet

# Application Configuration
VITE_PUBLIC_APP_NAME=FitChain
VITE_PUBLIC_APP_VERSION=1.0.0

# API Endpoints (Optional - configure if you have backend services)
VITE_PUBLIC_API_BASE_URL=https://api.fitchain.app
VITE_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Feature Flags
VITE_PUBLIC_ENABLE_CONTESTS=true
VITE_PUBLIC_ENABLE_NFT_REWARDS=true
VITE_PUBLIC_ENABLE_LEADERBOARD=true